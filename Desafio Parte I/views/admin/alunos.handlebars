<h2>Lista de Alunos: </h2>
<hr>
<a href="/admin/alunos/add"><button class="btn btn-success"> Novo aluno</button></a>

{{#each alunos}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4><br>
            <small>Nota de Português:<p>{{portugues}}</p></small>
            <small>Nota de Matemática:<p>{{matematica}}</p></small>
            <small>Data de criação: {{date}}</small><br>
            <a href="/admin/alunos/edit/{{_id}}"><button class="btn btn-success mt-4">Editar aluno</button></a>
            <form action="/admin/alunos/deletar" method="post">
                <input type="hidden" name="id" value="{{__id}}"></input>
                <button type="submit" class="btn btn-danger mt-2"> Deletar aluno</button>
            </form>
        </div>
    </div>
    
{{else}}

<h4 class="mt-3">Nenhuma aluno registrado</h4>

{{/each}}



